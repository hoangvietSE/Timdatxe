<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="BottomTabStyle">
        <item name="android:theme">@style/Ripple</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="RegisTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
    </style>

    <style name="RegisEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:color">@color/black</item>
    </style>

    //OtpView

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextViewNormal">
        <item name="android:textColor">@color/color_999</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/forgot_description</item>
    </style>

    <style name="SmallRatingBar" parent="android:style/Widget.Material.RatingBar.Small"></style>

    <style name="TextViewUpdateCar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="EditTextUpdateCar">
        <item name="android:background">@drawable/bg_no_color</item>
        <item name="android:layout_marginTop">@dimen/margin_8_dp</item>
        <item name="android:padding">@dimen/content_padding_resend</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Ripple">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="RippleToolbar">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:colorControlHighlight">@color/gray_e6e6e6</item>
    </style>

    <style name="ThemePickerImage">
        <item name="android:color">@color/colorPrimary</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogBackgroundCancelBookingActive">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/element_padding_normal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_cancel_booking_step_two_active</item>
    </style>

    <style name="DialogBackgroundCancelBookingNotActive">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/element_padding_normal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_cancel_booking_step_two_not_active</item>
    </style>

    <style name="DialogTitleTitleCancelBooking">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4.5</item>
        <item name="android:padding">@dimen/element_padding_normal</item>
    </style>

    <style name="DialogDetailCancelBooking">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5.5</item>
        <item name="android:padding">@dimen/element_padding_normal</item>
    </style>

    <style name="TextViewMoneyTypeTrip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TextViewPercentTypeTrip">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>


</resources>
