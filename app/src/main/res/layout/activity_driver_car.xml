<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabIndicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_20_dp"
        app:tabBackground="@drawable/bg_tablayout_indicator"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_type_trip_create_post"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/content_padding_normal"
        android:paddingTop="@dimen/content_padding_resend"
        android:paddingBottom="@dimen/content_padding_resend"
        android:text="@string/driver_car_title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10_dp">

        <TextView
            android:id="@+id/tv_title_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/driver_car_title_car"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/tv_title_car_name"
            android:gravity="end"
            android:paddingEnd="@dimen/content_padding_normal"
            android:textAllCaps="true"
            android:textColor="@color/black"
            tools:text="toyota innova 2015" />
    </RelativeLayout>

    <View style="@style/LineView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10_dp">

        <TextView
            android:id="@+id/tv_title_bienso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/driver_car_title_bienso"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_bienso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_title_bienso"
            android:gravity="end"
            android:paddingEnd="@dimen/content_padding_normal"
            android:textAllCaps="true"
            android:textColor="@color/black"
            tools:text="toyota innova 2015" />
    </RelativeLayout>

    <View style="@style/LineView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10_dp">

        <TextView
            android:id="@+id/tv_title_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/driver_car_title_status"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_title_status"
            android:gravity="end"
            android:paddingEnd="@dimen/content_padding_normal"
            android:textAllCaps="true"
            android:textColor="@color/black"
            tools:text="toyota innova 2015" />
    </RelativeLayout>

    <View style="@style/LineView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10_dp">

        <TextView
            android:id="@+id/tv_title_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/driver_car_title_color"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_title_color"
            android:gravity="end"
            android:paddingEnd="@dimen/content_padding_normal"
            android:textAllCaps="true"
            android:textColor="@color/black"
            tools:text="toyota innova 2015" />
    </RelativeLayout>

    <View style="@style/LineView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10_dp">

        <TextView
            android:id="@+id/tv_title_handangkiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/driver_car_title_handangkiem"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_handangkiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_title_handangkiem"
            android:gravity="end"
            android:paddingEnd="@dimen/content_padding_normal"
            android:textAllCaps="true"
            android:textColor="@color/black"
            tools:text="toyota innova 2015" />
    </RelativeLayout>

    <View style="@style/LineView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10_dp">

        <TextView
            android:id="@+id/tv_title_date_regis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/driver_car_title_date_regis"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_date_regis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_title_date_regis"
            android:gravity="end"
            android:paddingEnd="@dimen/content_padding_normal"
            android:textAllCaps="true"
            android:textColor="@color/black"
            tools:text="toyota innova 2015" />
    </RelativeLayout>

    <View style="@style/LineView" />

    <TextView
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_32_dp"
        android:layout_marginTop="@dimen/margin_32_dp"
        android:layout_marginEnd="@dimen/margin_32_dp"
        android:background="@drawable/bg_btn_login"
        android:gravity="center"
        android:text="@string/driver_car_btn_update"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>