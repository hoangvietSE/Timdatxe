<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/content_padding_resend"
        android:background="@color/color_bottom_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_faqs_number"
            android:textColor="@color/black"
            android:textSize="@dimen/text_big"
            android:text="1) "
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/content_padding_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_faqs_number"
            android:layout_marginEnd="@dimen/content_padding_extraLarge"
            android:id="@+id/tv_list_group"
            android:textSize="@dimen/text_big"
            android:textColor="@color/black"
            android:text="Tại sao tôi phải cung cấp thông tin tài khoản cá nhân"
            android:layout_marginStart="@dimen/content_padding_normal"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>