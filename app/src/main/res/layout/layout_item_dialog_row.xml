<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/content_padding_normal"
        android:paddingTop="@dimen/margin_10_dp"
        android:paddingEnd="@dimen/margin_16_dp"
        android:paddingBottom="@dimen/margin_10_dp">

        <TextView
            android:id="@+id/title"
            style="@style/TextViewNormal"
            android:layout_alignParentStart="true"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/text_size_14"
            tools:text="Ho ten" />

        <TextView
            android:id="@+id/detail"
            style="@style/TextViewBold"
            android:layout_width="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/title"
            android:gravity="end"
            android:paddingStart="@dimen/content_padding_normal"
            tools:text="Chưa cập nhật" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/row"
        android:background="@color/gray_b3b3b3" />
</RelativeLayout>