<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_menu_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/content_padding_normal"
        android:layout_marginTop="@dimen/content_padding_normal"
        tools:src="@drawable/ic_facebook" />

    <TextView
        android:id="@+id/tv_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/content_padding_normal"
        android:layout_marginTop="@dimen/content_padding_normal"
        android:layout_toRightOf="@id/imv_menu_item"
        android:text="Đăng xuất" />

</RelativeLayout>